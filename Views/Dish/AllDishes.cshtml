@model List<Dish>

<body class="bg-dark text-light">

    <div class="text-center">
        <a asp-controller="Chef" asp-action="AllChefs">Chefs</a> |
        <a asp-controller="Dish" asp-action="Index">Dishes</a> |
        <a asp-controller="Chef" asp-action="NewChef">Add a Chef</a> |
        <a asp-controller="Dish" asp-action="NewDish">Add a Dish</a>
    </div>
    <h1>Yum! Check out these tasty dishes!</h1>
    <hr>


    <table class="table text-light">
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
        @foreach (Dish i in Model)
        {
            <tr>
                <td>@i.DishName</td>
                <td>@i.Creator?.ChefFirstName @i.Creator.ChefLastName</td>
                <td>@i.Tastiness</td>
                <td>@i.Calories</td>
            </tr>
        }
    </table>

</body>